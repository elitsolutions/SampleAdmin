{# app/Resources/views/admin/index.html.twig #}
{% extends 'admin/index.html.twig' %}

{% block content %}
    {% for user in groups %}
        <tr>
            <td><a href="{{ path('show_user', {'id': user.id}) }}">{{ user.name }}</a></td>
            <td><a href="{{ path('show_group', {'id': user.group.id}) }}">{{ user.group }}</a></td>
            <td><a href="{{ path('edit_user', {'id': user.id}) }}">Edit</a></td>
            <td><a href="{{ path('delete_user', {'id': user.id}) }}">Delete</a></td>
        </tr>
    {% else %}
        <tr>
            <td></td>
            <td class="d-flex justify-content-center text-danger">No user found. Add one</td>
            <td></td>
            <td></td>
        </tr>
    {% endfor %}
<hr />
<a href="{{ path('group_add') }}" class="btn btn-primary">Add a group</a>
{% endblock %}