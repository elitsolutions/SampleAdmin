{# app/Resources/views/admin/index.html.twig #}
{% extends 'admin/index.html.twig' %}

{% block content %}
<div>Clicking on the user's name below, add the user to <strong>{{ group.name }}</strong> group</div>
<br />
<table class="table table-striped">
    <thead class="thead-default">
        <tr>
        <th>Name</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('show_user', {'id': user.id}) }}">{{ user.name }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td class="d-flex justify-content-center text-danger">No user found. Add one</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<hr />
{% endblock %}